@model LogBook.AttendanceDetail

<div class="container">


    <form>


        <div class="form-group row" >

             <label for="date">Date</label>

            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.AttendanceDate, new { @class = "datepicker", autocomplete = "off", @type= "date"})
                @Html.ValidationMessageFor(model => model.AttendanceDate)
            </div>

        </div>

        <div class="form-group row">

            <label for="MentorsDropDownList">Mentor</label>

            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.Mentor, (SelectList)ViewBag.Mentors, "--Select Mentor--", new { @class = "btn btn-primary dropdown-toggle", @id = "MentorsDropDownList" })
                @Html.ValidationMessageFor(model => model.Mentor)  
            </div>

        </div>


        <div class="form-group row">

          <label for="TrainingOn">Training on</label>

            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.TrainingOn, new { @id = "TrainingOn" })
                @Html.ValidationMessageFor(model => model.TrainingOn)
            </div>

        </div>

            <div class ="form-inline">

                <div class="col-lg-10">
                    @Html.DropDownListFor(model => model.PersonId, (SelectList)ViewBag.Learners, "--Select Learner--", new { @id = "LearnersDropDownList", @class = "btn btn-primary dropdown-toggle" })
                    @Html.ValidationMessageFor(model => model.PersonId)


                    @Html.TextBoxFor(model => model.Hour, new { @id = "Hours", @maxlength = "2" })
                    @Html.ValidationMessageFor(model => model.Hour)
                    <span id="ErrorMessage"></span>

                </div>
               

            </div>

        <br />


        <div class="form-inline">

            <div class="col-lg-4">

                <input type="submit" value="Save" class="btn btn-default btn-success" />

                <input type="button" value="Cancel" class="btn btn-default btn-danger" onclick="location.href='@Url.Action("Index", "Home",new {id = UrlParameter.Optional })'" />

            </div>


        </div>

   

